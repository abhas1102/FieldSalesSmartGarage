<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPartyFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addPartyToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:logo="@drawable/ic_back"
        app:title="Add Party"
        app:titleTextColor="@color/white"
        android:background="@color/blue_version1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textPartyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Name"
        app:layout_constraintTop_toBottomOf="@id/addPartyToolbar"
        android:layout_marginTop="@dimen/margin30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etPartyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintTop_toBottomOf="@id/textPartyName"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textContactPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact person name"
        app:layout_constraintTop_toBottomOf="@id/etPartyName"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etContactPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textContactPersonName"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textPartyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Code"
        app:layout_constraintTop_toBottomOf="@id/etContactPersonName"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etPartyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textPartyCode"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>
    <TextView
        android:id="@+id/textWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        app:layout_constraintTop_toBottomOf="@id/etPartyCode"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textWebsite"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/etWebsite"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textEmail"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etAddressLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address Line 1"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintTop_toBottomOf="@id/textAddress"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etAddressLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address Line 2"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintTop_toBottomOf="@id/etAddressLine1"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile number"
        app:layout_constraintTop_toBottomOf="@id/etAddressLine2"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:background="@drawable/add_party_edittext_background"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textMobileNumber"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address_input_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0.5dp"
        app:boxStrokeWidthFocused="0.5dp"
        app:boxStrokeColor="#FFF"
        app:boxBackgroundColor="#FFF"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:layout_constraintTop_toBottomOf="@id/etMobileNumber"
        app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/autocomplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Select your state"
        android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textPincode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pincode"
        app:layout_constraintTop_toBottomOf="@id/address_input_state"
        android:layout_marginTop="@dimen/padding10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etPincode"
        android:layout_width="match_parent"
        android:background="@drawable/add_party_edittext_background"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textPincode"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textPan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pan"
        app:layout_constraintTop_toBottomOf="@id/etPincode"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etPan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintTop_toBottomOf="@id/textPan"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <TextView
        android:id="@+id/textNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        app:layout_constraintTop_toBottomOf="@id/etPan"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"/>

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/textNote"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmitAddParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Submit"
        android:backgroundTint="@color/blue_version1"
        android:layout_marginStart="@dimen/margin20dp"
        android:layout_marginEnd="@dimen/margin20dp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>