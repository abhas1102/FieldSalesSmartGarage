<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/blueHeaderDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blue_version1"/>
    <TextView
        android:id="@+id/TitleDialogCreateOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Oil 2.5 ltr"
        android:layout_marginStart="@dimen/padding10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/blueHeaderDialog"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="@dimen/margin20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/blueHeaderDialog"
        android:text="Rate - "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/padding10dp"
        android:layout_marginTop="@dimen/margin20dp"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/valuePriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textRate"
        android:layout_marginStart="@dimen/padding10dp"
        app:layout_constraintTop_toBottomOf="@id/blueHeaderDialog"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintBottom_toBottomOf="@id/textRate"
        android:text="600"
        android:textSize="@dimen/textsizein20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textRate"
        app:layout_constraintStart_toStartOf="@id/textRate"
        android:text="Qty -"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin20dp"
        android:textSize="20sp"/>
    <Spinner
        android:id="@+id/quantitySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textQty"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textRate"
        android:layout_marginTop="@dimen/margin20dp"/>













</androidx.constraintlayout.widget.ConstraintLayout>