<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckinDetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCheckinDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding10dp"
        android:backgroundTint="@color/cream_shade2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameGarageDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/nameGarageOwnerDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage owner name"
                app:layout_constraintTop_toBottomOf="@id/nameGarageDetailView"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/mobileNumberGarageDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6200891659"
                app:layout_constraintTop_toBottomOf="@id/nameGarageOwnerDetailView"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/visitPurposeGarageDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Purpose"
                app:layout_constraintTop_toBottomOf="@id/mobileNumberGarageDetailView"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/addressGarageDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Address"
                app:layout_constraintTop_toBottomOf="@id/visitPurposeGarageDetailView"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/orderDetailsDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order details"
                android:textColor="@color/white"
                android:background="@color/blue_version1"
                app:layout_constraintTop_toBottomOf="@id/addressGarageDetailView"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/checkinTimeInDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check in 9:00 AM"
                android:textColor="@color/green_version1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/checkoutTimeInDetailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check out 9:00 AM"
                android:textColor="@color/red_shade"
                app:layout_constraintTop_toBottomOf="@id/checkinTimeInDetailView"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/imageOfSalesPersonInDetailsView"
                android:layout_width="@dimen/height50dp"
                android:layout_height="@dimen/height50dp"
                app:layout_constraintTop_toBottomOf="@id/checkoutTimeInDetailView"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/pdf"/>






        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>