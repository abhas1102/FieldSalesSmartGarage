<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PartyDetailsFragment" android:layout_height="match_parent" android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutPartyDetails"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue_version1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/appBarIconBackPartyDetailsFragment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin20dp"
                android:src="@drawable/icon_appbar_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textPartyNameAppBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin20dp"
                android:text="People Automotive"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/appBarIconBackPartyDetailsFragment"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textPartyNameInPartyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutPartyDetails"
        android:layout_marginTop="@dimen/margin20dp"/>
    <EditText
        android:id="@+id/etPartyNameInPartyDetails"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin20dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toEndOf="@id/textPartyNameInPartyDetails"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutPartyDetails"
        android:layout_marginTop="@dimen/margin20dp"/>

    <TextView
        android:id="@+id/textBusinessType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Type"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textPartyNameInPartyDetails"
        android:layout_marginTop="@dimen/margin20dp"/>
    <EditText
        android:id="@+id/etBusinessType"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin20dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toEndOf="@id/textBusinessType"
        app:layout_constraintTop_toBottomOf="@id/etPartyNameInPartyDetails"
        android:layout_marginTop="@dimen/margin20dp"/>

    <TextView
        android:id="@+id/textContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Person Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textBusinessType"
        android:layout_marginTop="@dimen/margin20dp"/>
    <EditText
        android:id="@+id/etContactPerson"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin20dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toEndOf="@id/textPartyNameInPartyDetails"
        app:layout_constraintTop_toBottomOf="@id/etBusinessType"
        android:layout_marginTop="@dimen/margin20dp"/>

    <TextView
        android:id="@+id/textPartyCodeInPartyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Code"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textContactName"
        android:layout_marginTop="@dimen/margin20dp"/>
    <EditText
        android:id="@+id/etPartyCodeInPartyDetails"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin20dp"
        android:background="@drawable/add_party_edittext_background"
        app:layout_constraintStart_toEndOf="@id/textPartyCodeInPartyDetails"
        app:layout_constraintTop_toBottomOf="@id/etContactPerson"
        android:layout_marginTop="@dimen/margin20dp"/>

    <TextView
        android:id="@+id/textEmailInPartyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textPartyCodeInPartyDetails"
        android:layout_marginTop="@dimen/margin20dp"/>
    <EditText
        android:id="@+id/etEmailInPartyDetails"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textEmailInPartyDetails"
        app:layout_constraintTop_toBottomOf="@id/etContactPerson"
        android:layout_marginTop="@dimen/margin20dp"
        android:background="@drawable/add_party_edittext_background"
        android:layout_marginStart="@dimen/margin20dp"/>
    <LinearLayout
        android:id="@+id/llCountryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/textEmailInPartyDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Country"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llStateDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llCountryDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Country"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llStateDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="City"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPinCodeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llCityDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Pincode"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddressOneDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llPinCodeDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Address1"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddressTwoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llAddressOneDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Address 2"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWebsiteDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llAddressTwoDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="City"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPhoneDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llWebsiteDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="Phone"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPanDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llPhoneDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="PAN/VAT/GST"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAboutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin20dp"
        app:layout_constraintTop_toBottomOf="@id/llPanDetails"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:text="About"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20dp"
            android:background="@drawable/add_party_edittext_background"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAboutDetails"
        android:layout_marginTop="@dimen/margin20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAboutDetails"
        android:layout_marginTop="@dimen/margin20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>