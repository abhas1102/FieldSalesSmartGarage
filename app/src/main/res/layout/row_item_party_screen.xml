<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin20dp"
    app:strokeWidth="1dp"
    android:layout_marginStart="@dimen/padding10dp"
    android:layout_marginEnd="@dimen/padding10dp"
    app:strokeColor="@color/blue_version1"
    android:padding="@dimen/padding10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/partyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin20dp"
            android:src="@drawable/partyimage"/>

        <TextView
            android:id="@+id/partyBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/partyImage"
            android:layout_marginStart="@dimen/padding10dp"
            app:layout_constraintTop_toTopOf="@id/partyImage"
            android:text="People Automotive"
            android:layout_marginTop="@dimen/padding10dp"/>

        <TextView
            android:id="@+id/partyOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/partyImage"
            android:layout_marginStart="@dimen/padding10dp"
            app:layout_constraintTop_toBottomOf="@id/partyBusinessName"
            android:text="People Automotive"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/padding10dp"
            android:layout_marginTop="@dimen/padding10dp"/>
        <TextView
            android:id="@+id/partyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/partyImage"
            android:text="123456"
            android:layout_marginEnd="@dimen/margin20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPartyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit Details"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue_version1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/padding10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>
</layout>