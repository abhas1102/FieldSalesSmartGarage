<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.CollectionDetailFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue_version1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/appBarIconBackHomeFragment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin20dp"
                android:src="@drawable/icon_appbar_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMarkAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin20dp"
                android:text="Collection"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/appBarIconBackHomeFragment"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="50dp"
                android:layout_height="@dimen/margin30dp"
                android:layout_marginEnd="55dp"
                android:src="@drawable/collection_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:background="#D9D9D9"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Received amount"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:background="#D9D9D9"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Received Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:background="#D9D9D9"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Payment mode"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:background="#D9D9D9"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Note"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:background="#D9D9D9"
            android:text="Party Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>